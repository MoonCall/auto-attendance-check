{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "sourceMap": true
    },
    "lib": ["es5", "es2015.promise", "DOM", "ScriptHost"],
    "outdir": "gen/",
    "include": [
        "index.ts",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
